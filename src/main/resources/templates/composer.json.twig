{
    "name": "{{ organization | dasherize }}/{{ module | dasherize }}",
    "type": "library",
    "description": "{{ module }} module",
    "license": "proprietary",
    "require": {
        "php": ">=7.4",
        "spryker/kernel": "^3.30.0"
    },
    "require-dev": {
        "spryker/code-sniffer": "*",
        "spryker/testify": "*"
    },
    "autoload": {
        "psr-4": {
            "{{ organization }}\\": "src/{{ organization }}/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ organization }}Test\\": "tests/{{ organization }}Test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
